<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tf_listitem_date"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="date" />
    <TextView
        android:id="@+id/tf_listitem_money"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="money" />
    <TextView
        android:id="@+id/tf_listitem_fuelAmount"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="amount" />
    <TextView
            android:id="@+id/tf_listitem_mileage"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="mileage" />
    <TextView
            android:id="@+id/tf_listitem_fuelDial"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="dial" />
    <TextView
            android:id="@+id/tf_listitem_price"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="price" />
    <TextView
            android:id="@+id/tf_listitem_fuelType"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="fuel" />    
    <TextView
            android:id="@+id/tf_listitem_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="station" />
    

</LinearLayout>
